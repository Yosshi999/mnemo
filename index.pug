doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
		title MNEMO
		script(src="index.js", charset="utf-8")
		link(href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css", rel="stylesheet", crossorigin="anonymous")
		link(href="index.css", rel="stylesheet")
	body
		.container
			h1 MNEMO
			.board-wrap
				.board
					- for (let y = 0; y < 3; y++)
						.row(data-y=y)
							- for (let x = 0; x < 3; x++)
								.block(data-x=x, data-y=y)
					.data-layer

			.panel
				- for (let i = 0; i < 6; i++)
					.block(data-type = 'wire' + i, selected = i === 0)

			.controls
				button.btn.btn-primary.btn-lg.execute(type = 'button') Execute
